
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png">*@
    @*<link rel="icon" type="image/png" sizes="96x96" href="assets/img/favicon.png">*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/bundles/BaseStyle")

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css' />
</head>
<body>
    <div class="wrapper">
        @Html.Partial("~/Views/Shared/Partial/SideBar.cshtml")
        <div class="main-panel">
            @Html.Partial("~/Views/Shared/Partial/TopNavigation.cshtml")
            <div class="content">
                @RenderBody()
            </div>
            @Html.Partial("~/Views/Shared/Partial/Footer.cshtml")
        </div>
    </div>

    <div id="loadingdiv" class="loadingAjax">
        <div style="background-color:white; top:50%; left:40%; position:fixed; opacity: 1;">
            <img src="/Contents/img/ajax-loader.gif" title="Working please wait ..." />
            <span style="font-size:15px;"> Working please wait ...</span>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react-dom.js"></script>
    @Scripts.Render("~/bundles/JQuery")
    @Scripts.Render("~/bundles/Bootstrap")
    @*<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>*@
    @Scripts.Render("~/bundles/Themescripts")
    @*<script type="text/javascript">
        var rootApplicationURL = "";
        if (@Request.Url.Port > 0) {
            rootApplicationURL = @Url.RequestContext.HttpContext.Request.Url.Scheme
                + "://"
                + @Url.RequestContext.HttpContext.Request.Url.Host
                + ":"
                + @Url.RequestContext.HttpContext.Request.Url.Port;
        }
        else {
            rootApplicationURL = @Url.RequestContext.HttpContext.Request.Url.Scheme
                + "://"
                + @Url.RequestContext.HttpContext.Request.Url.Host;
        }
    </script>*@
    @RenderSection("customScripts", false)
</body>
</html>
