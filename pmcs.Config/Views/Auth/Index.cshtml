@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - Norconsult Project Management Control System PMCS</title>
    @Styles.Render("~/bundles/BaseStyle")
</head>
<body>
    <div class="row">
        <div style="height:150px;">&nbsp;</div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <img src="~/Contents/img/Norconsult_150x43.png" style="margin-left:35%;" />
            &nbsp;
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    @if (ViewData["errorMessage"] != null)
                    {
                        <div id="divErrors" class="alert alert-danger">
                            <button type="button" aria-hidden="true" class="close">×</button>
                            <span><b> Error occured- </b> @ViewData["errorMessage"] </span>
                        </div>
                    }
                    <form id="loginForm" role="form" action="@Url.Action("Index","Auth")" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control border-input" placeholder="Username" name="Username" type="email" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control border-input" placeholder="Password" id="password" name="password" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me" class="form-control border-input">Remember Me
                                </label>
                            </div>
                            <button class="btn btn-primary">Login</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

    @Scripts.Render("~/bundles/JQuery")
    @Scripts.Render("~/bundles/Bootstrap")
    @Scripts.Render("~/bundles/login")

</body>
</html>

