@model IEnumerable<pmcs.Model.SystemModule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="header">
                <h4 class="title">System Modules</h4>
                <p class="category">You can change the modules that is going to be used by the client.</p>
            </div>
            <div id="tableContainer" class="content table-responsive table-full-width">
                <div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Used</th>
                                <th>Change status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var module in Model)
                            {
                                <tr>
                                    <td>@module.ModuleId</td>
                                    <td>@module.ModuleName</td>
                                    <td>
                                        @if (module.IsActive)
                                        {
                                            <a class="btn btn-success">
                                                <i class="ti-check"></i>Activated
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger">
                                                <i class="ti-close"></i>&nbsp;Deactivated
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @if (module.IsActive)
                                        {
                                            <button id="BtnDeactivate_@module.ModuleId" class="btn btn-danger btn-xs"><i class="ti-cloud-down"></i>Deactivate</button>
                                        }
                                        else
                                        {
                                            <button id="BtnActivate_@module.ModuleId" class="btn btn-primary btn-xs"><i class="ti-cloud-up"></i>Activate</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="ModalDiv"></div>
        </div>
    </div>
</div>
<input type="hidden" id="HiddenId" />
<input type="hidden" id="HiddenOp" />

<div id="dialogeDiv">
</div>
