@using pmcs.Model.Contracts;
@model IEnumerable<BOQ>
@{
    ViewBag.Title = "PMCS v1.2 - BOQs List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><em class="fa fa-home"></em></a></li>
        <li>Contracts</li>
        <li class="active">Design BOQs</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Design BOQs</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-heading">
                Manage Design BOQs List
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body timeline-container">
                <div id="DivEditEntity"></div>
                <div id="DivSearchEntity"></div>
                <div id="DivAddEntity" style="float:left;"></div>
                <div id="DivImportBOQ" style="float:left; margin-left:10px; margin-right:10px;"></div>
                <br />
                <div id="DivEntityList">
                    <table id="TblDesignBOQ" class="table table-striped datatable">
                        <thead>
                            <tr>
                                <th>
                                    Job
                                </th>
                                <th>
                                    CUL
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    FOC
                                </th>
                                <th>
                                    Payable
                                </th>
                                <th>
                                    Is FOC
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var BOQ in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("JobsDetails", "Contracts", new { id = BOQ.JobId })">
                                            @BOQ.JobNumber
                                        </a>
                                    </td>
                                    <td>
                                        @BOQ.CULName
                                    </td>
                                    <td>
                                        @BOQ.Quantity
                                    </td>
                                    <td>
                                        @BOQ.FOC
                                    </td>
                                    <td>
                                        @BOQ.Payable
                                    </td>
                                    <td>
                                        @BOQ.IsFOC
                                    </td>
                                    @*<td>
                                            @BOQ.CreatedDate.ToShortDateString()
                                        </td>*@
                                    <td>
                                        <button class="btn btn-primary btn-xs" id="BtnEdit_@BOQ.DesignId">
                                            <i class="fa fa-refresh"></i>
                                            Edit
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="HiddenId" name="HiddenId" />
@section customScripts {
    <script type="text/javascript" src="~/Scripts/App/BOQs/AddBOQ.jsx"></script>
    <script type="text/javascript" src="~/Scripts/App/BOQs/EditBOQ.jsx"></script>
    <script type="text/javascript" src="~/Scripts/App/BOQs/SearchBOQs.jsx"></script>
    <script type="text/javascript" src="~/Scripts/App/BOQs/ImportBOQs.jsx"></script>
}