@using pmcs.Model.ViewModels;
@model IEnumerable<JobsListViewModel>
@{
    ViewBag.Title = "PMCS v1.2 - Jobs List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><em class="fa fa-home"></em></a></li>
        <li>Contracts</li>
        <li class="active">Jobs List</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Jobs List</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-heading">
                Manage Jobs List
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body timeline-container">
                <div id="DivEditEntity"></div>
                <div id="DivSearchEntity"></div>
                <div id="DivAddEntity"></div>
                <br />
                <div id="DivEntityList">
                    <table class="table table-striped datatable">
                        <thead>
                            <tr>
                                <th>
                                    Job Number
                                </th>
                                <th>
                                    Purchase Order
                                </th>
                                <th>
                                    Element
                                </th>
                                <th>
                                    Project
                                </th>
                                <th>
                                    Site
                                </th>
                                <th>
                                    Job Type
                                </th>
                                <th>
                                    Task / Milestone
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Job in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("JobsDetails", "Contracts", new { id = Job.JobId })#jobs">
                                            @Job.JobNumber
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("POsDetails", "Contracts", new { id = Job.POId })">
                                            @Job.PONumber
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ElementDetails", "Contracts", new { id = Job.ElementId })">
                                            @Job.ElementName
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ProjectDetails", "Projects", new { id = Job.ProjectId })">
                                            @Job.ProjectName
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("SitesDetails", "Contracts", new { id = Job.SiteIdNumber })">
                                            @Job.SiteName
                                        </a>
                                    </td>
                                    @*<td>
                                            @(Job.FOC == true ? "Yes" : "No")
                                        </td>*@
                                    <td>
                                        @Job.JobTypeName
                                    </td>
                                    <td>
                                        @Job.TaskName
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-xs" id="BtnEditJob_@Job.JobId">
                                            <i class="fa fa-refresh"></i>
                                            Edit Job
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-success btn-xs" id="BtnShowOILs_@Job.JobId">
                                            <i class="fa fa-info-circle"></i>
                                            Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="HiddenJobId" name="HiddenJobId" />
@section customScripts {
    <script type="text/javascript" src="~/Scripts/App/Jobs/AddJob.jsx"></script>
    <script type="text/javascript" src="~/Scripts/App/Jobs/EditJob.jsx"></script>
    <script type="text/javascript" src="~/Scripts/App/Jobs/SearchJobs.jsx"></script>
}