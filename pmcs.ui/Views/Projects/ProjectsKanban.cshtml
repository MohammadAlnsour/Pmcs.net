@using pmcs.Model.Contracts
@using System.Web.Optimization
@model IEnumerable<Project>
@{
    ViewBag.Title = "PMCS v1.2 - Projects Kanban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomStyles {
    @Styles.Render("~/bundles/KanbanBoardStyle")
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><em class="fa fa-home"></em></a></li>
        <li>Projects Management</li>
        <li class="active">Projects Kanban</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Projects Kanban</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-heading">
                Projects Kanban Board
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body timeline-container">
                <table style="width:100%;">
                    <tbody>
                        <tr>
                            <td style="width : 20%;">
                                Please select the project :
                            </td>
                            <td>
                                <select id="SelectProject" name="SelectProject" class="form-control">
                                    <option value="">Select a project</option>
                                    @foreach (var project in Model)
                                    {
                                        <option value="@project.ProjectId">@project.ProjectName</option>
                                    }
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br />
                <div id="DivProjectsKanban"></div>
            </div>
        </div>
    </div>
</div>

@section customScripts {
    <script type="text/javascript" src="/Scripts/App/ProjectManagement/ProjectsKanban.jsx"></script>
}