@using pmcs.Model.Contracts
@using System.Web.Optimization
@model IEnumerable<Project>
@{
    ViewBag.Title = "PMCS v1.2 - Project Tasks Templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomStyles {
    @Styles.Render("~/bundles/TreeTableCss")
}


<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><em class="fa fa-home"></em></a></li>
        <li>Projects Management</li>
        <li class="active">Project Tasks Templates</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Project Tasks Templates</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-heading">
                Project Tasks Templates Table
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body timeline-container">
                <div id="DivAddTemplate"></div>
                <div id="DivTreeTableContrainer"></div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hiddenParentTaskId" name="hiddenParentTaskId" />
<input type="hidden" id="HiddentTaskId" name="HiddentTaskId" />

@section customScripts {
    @Scripts.Render("~/bundles/TreeTable")
    <script type="text/javascript" src="/Scripts/App/ProjectManagement/ProjectTemplatesTreeTable.jsx"></script>

}