@{
    ViewBag.Title = "PMCS v1.2 - Projects Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@System.Web.Optimization.Styles.Render("~/bundles/FullCalendarCss")

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><em class="fa fa-home"></em></a></li>
        <li>Projects Management</li>
        <li class="active">Projects Calendar</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Projects Calendar</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-heading">
                Manage Calendar
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body timeline-container">
                <div id="DivFilterCalender"></div>
                <div id="DivProjectsCalendar"></div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="HiddenEditProjectId" />

@section customScripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/FullCalendar")
    <script type="text/javascript" src="/Scripts/App/ProjectManagement/ProjectsCalendar.jsx"></script>
}
