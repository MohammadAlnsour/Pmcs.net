@using System.Web.Optimization;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pmcs v1.2 - Authentication Page</title>

    @Styles.Render("~/bundles/BaseStyles")
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <span>Nor</span>Consult
                        @*<img src="~/Contents/img/Norconsult-Logo-2.png" style="height: 60px; width:250px;" alt="Norconsult Telematics Inc." />*@
                    </a>
                </div>
            </div>
        </nav>
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    <form role="form" action="@Url.Action("Authenticate","Auth")" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="username" name="username" type="text" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <button class="btn btn-primary">Login</button>
                        </fieldset>
                    </form>
                    <br />
                    <br />
                    @if (ViewData["errorMessage"] != null)
                    {
                        <div class="alert bg-danger" role="alert">
                            <em class="fa fa-lg fa-warning">&nbsp;</em>
                            @ViewData["errorMessage"]
                            <a href="#" class="pull-right">
                                @*<em class="fa fa-lg fa-close"></em>*@
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->
    @Scripts.Render("~/bundles/JQuery")
    @Scripts.Render("~/bundles/Bootstrap")
</body>
</html>
